<!DOCTYPE html>
<html>
    <%- include('../partials/head')  %> 
    <body id="bodyCarritoCompras">
         <%- include('../partials/header')%>
        <table id="ListaCompras">
            <thead>
                <tr>
                    <th id="img">Producto</th>
                    <th class="infoPrecio">Precio Unitario</th>
                    <th class="infoctrlUnidades">Cantidad</th>
                    <th class="infoPrecioTotal">Precio Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!--prodcutos del carrito-->

                <% for(let i=0;i<DetalleCompra.length;i++){ %> 
                    <tr class="unProducto">
                            <td class="imagen">
                                <img src= "/images/product/<%= DetalleCompra[i].image_product %>"  alt="Imagen de Producto"  > 
                           </td>
                           <td class="detalle"> 
                               <p> <%= DetalleCompra[i].priceUnit %> </p>
                           </td>
           
                           <td class="masMenos">
                               <button type="button"> <i class="fas fa-arrow-up"> </i> </button>
                               <p> <%= DetalleCompra[i].stock %> </p>
                               <button type="button"> <i class="fas fa-arrow-down"></i> </button>
                           </td>
           
                           <td class="detalle"> 
                               <p><%= (DetalleCompra[i].priceUnit* DetalleCompra[i].stock) %> $</p>
                           </td>
           
                           <td class="NoProducto">
                               <form method="post" action= "/Producto/Carrito/<%= DetalleCompra[i].id %>/eliminar?_method=delete" > 
                                   <button type="submit"> <i class="far fa-trash-alt"></i> </button> 
                               </form>
                           </td>
                    </tr>
               
                <% } %> 
                <!-- fin del carrito-->
            </tbody>
            <tbody class="resultados">
                <tr class="resultados">
                    <td class="NoProducto"></td>
                    <td class="NoProducto"></td>
                    <td class="resultados">
                        <label >Total Neto: </label>
                    </td>
                    <td class="resultados"> 
                        <label > valor </label>
                    </td>
                    <td class="NoProducto"></td>
                </tr>
            </tbody>
        </table>
        <section class="special"> 
            <button submit >Realizar Pedido</button>
            <br>
            <button onclick="location.href='/producto'" > Seguir Comprando  </button> <!--es un boton para redireccionar, para ello usa la etiqueta location y usa su propiedad href asignandole a esta la ruta-->
        </section>
        <%- include('../partials/footer')%>
    </body>
</html>