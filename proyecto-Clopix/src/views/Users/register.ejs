<!DOCTYPE html>
<html>
    <%- include('../partials/head')  %> 
    <body id="bodyRegister">
      <%- include('../partials/header')%>
    
        <div class="wrapper">
            <div class="title">
              Formulario de Registro 
            </div>
            

            <form action="/User/Alta" method="post" enctype="multipart/form-data" class="form">
              <div class="inputfield">
                <label>Nombre completo</label>
                <input type="text" class="input" name="nombreCompleto">
              </div>
              <% if(locals.errors && errors.nombreCompleto){ %>
                <p class="feedback"><%= errors.nombreCompleto %> </p>
                <% } %>  
              
              <div class="inputfield">
                <label>E-mail</label>
                <input type="text" class="input" name="mail">
              </div>  
              <div class="inputfield">
                <label>Celular</label>
                <input type="text" class="input" name="celular">
              </div>  
         <!--Datos de ingreso-->      
              <div class="inputfield">
                <label>Nombre de usuario</label>
                <input type="text" class="input" name="usuario">
              </div>  
              <div class="inputfield">
                <label>Contraseña</label>
                <input type="password" class="input" name="pasword">
              </div>  
              <div class="inputfield">
                  <label>Confirmar contraseña</label>
                  <input type="password" class="input" name="passwordConfirm">
              </div> 

            <!--imagen de perfil-->

            <input type="file" class="image-profile" name="avatar">            

            <!--terms-->

              <div class="inputfield terms">
                  <label class="check">
                    <input type="checkbox" name="terminosyCondiciones">
                    <span class="checkmark"></span>
                  </label>
                  <p>Acepto términos y condiciones</p>
               </div>
              
              <div class="inputfield">
                
                <button type="submit"> Crear Cuenta </button>
                
              </div>
              
            <!--class container-signin-->
          
            <div class="container-signin">
              <p>¿Ya tienes una cuenta?<a href="#">Iniciar sesión</a>.</p>
            </div>


              
          </form>
        </div>	
        <%- include('../partials/footer')%>

    </body>
</html>
  